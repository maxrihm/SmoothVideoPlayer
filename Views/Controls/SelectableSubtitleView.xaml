<UserControl x:Class="SmoothVideoPlayer.Views.Controls.SelectableSubtitleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBox x:Name="SubtitleTextBox"
                 IsReadOnly="True"
                 BorderThickness="0"
                 AcceptsReturn="True"
                 Background="Transparent"
                 Foreground="White"
                 FontFamily="Arial"
                 FontSize="28"
                 FontWeight="Bold"
                 TextAlignment="Center"
                 Padding="10"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 MaxWidth="1200"
                 IsHitTestVisible="True"
                 TextWrapping="Wrap"
                 Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=SubtitleText}"/>
    </Grid>
</UserControl>
